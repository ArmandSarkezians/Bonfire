// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User{
  id  Int @id @default(autoincrement()) @unique
  firstName String  @db.VarChar(255)
  lastName String @db.VarChar(255)
  createdAt DateTime @default(now())
  job  Job  
}

model Classroom{
  id  Int @id @default(autoincrement()) @unique
  board_id Int
  facilitator_id Int
  title String  @db.VarChar(255)
  createdAt DateTime @default(now())
  inviteLink  String
}

model Board{
  id Int @id @default(autoincrement()) @unique
  user_id Int
  classroom_id Int @default(-1)   //If -1, not a classroom board
}

model State{
  id Int @id @default(autoincrement()) @unique
  board_id  Int
  title String
}

model Card{
  id Int @id @default(autoincrement()) @unique
  title String  
  desc String
  createdAt DateTime @default(now())
  modifiedAt DateTime @default(now())
  dueDate DateTime  //nullable
  submitUrl String  //nullable
}

model Tag{
  id Int @id @default(autoincrement()) @unique
  board_id Int
  title String
}

enum Job {
  STUDENT
  TA
  TEACHER
  TUTOR
  PROFESSOR
}